{
    "root": true,

    "extends": "mgol",

    "env": {
        "node": true,
        "es6": false
    },

    "rules": {
        // Rules are divided into sections from http://eslint.org/docs/rules/

        // ECMAScript 6
        "no-var": "off",
        "object-shorthand": "off",
        "prefer-arrow-callback": "off",
        "prefer-const": "off",
        "prefer-rest-params": "off",
        "prefer-spread": "off",
        "prefer-template": "off"
    }
}
